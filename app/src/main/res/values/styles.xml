<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorThemeRed</item>
        <item name="colorPrimaryDark">@color/colorDarkRed</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerLayoutTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ddffffff</item>
    </style>

    <!--SnsPopupWindow的运动动画-->
    <style name="sns_pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/sns_pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/sns_pop_exit_anim</item>
    </style>

    <style name="edittext_pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/edittext_pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/edittext_pop_exit_anim</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
